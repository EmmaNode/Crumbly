<h2>Create an Account</h2>
<form action="/auth/signup" method="post">
  <div class="form-group">
    <label>First Name:</label>
    <input type="text" name="firstname" class="form-control golden golden" placeholder="Given Name">
  </div>
  <div class="form-group">
    <label>Last Name:</label>
    <input type="text" name="lastname" class="form-control golden" placeholder="Surname">
  </div>
  <div class="form-group">
    <label>Display Name:</label>
    <input type="text" name="username" class="form-control golden" placeholder="Your Username">
  </div>
  <div class="form-group">
    <label>Email:</label>
    <input type="text" name="email" class="form-control golden" placeholder="Your Email">
  </div>
  <div class="form-group">
    <label>Password:</label>
    <input type="password" name="password" class="form-control golden" placeholder="Password">
  </div>
  <!-- This hides password letters by transforming them into dots  -->
  <div class="form-group">
    <label>Password Verification:</label>
    <input type="password" name="passwordVerify" class="form-control golden" placeholder="Password Again">
  </div>
  <input type="submit" class="yelp-button" value="sign up">
</form>
